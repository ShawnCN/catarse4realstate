#video.col.s12.m12.l9.profile-content.wow.fadeInUp data-wow-delay="0.4s" data-wow-duration="0.7s"
  .module
    .module-header
      h2
        i.material-icons.left> fingerprint
        | #{t('.video')}
      .btn-actions
        a href="#"
          i.material-icons.left> keyboard_arrow_left
          | Volver AtrÃ¡s
    .module-content
      .edit-message
        p #{t('.video_subtitle')}
        p #{t('.video_url_hint')}

      = simple_form_for @project, class: 'dashboard-video-form' do |form|
        .edit-dashboard-video-data
          .row
            .input.col.s12.m12
              = form.input :video_url, as: :url, label: t('.video_url'), input_html: { class: 'validate tooltipped', "data-tooltip" => t('.video_url_subtitle')},  required: true, hint: false

          .action-btn.row
            .col.s12
              button#btn-submit.waves-effect.waves-light.btn type="submit"  #{t('.submit')}

////////////////////////////////////////////////////////////////////////
/= simple_form_for @project, html: { class: 'project-form w-form' } do |form|
  .w-section.section
    .w-container
      .w-row
        .w-col.w-col-10.w-col-push-1
          .w-form
              = @project.display_errors(:video)
              .w-row.u-marginbottom-30.card.card-terciary.medium
                .w-col.w-col-6
                  label.field-label.fontweight-semibold = t('.video_url')
                  label.field-label.fontsize-smallest.fontcolor-secondary = t('.video_url_subtitle')
                  - if @project.draft? || @project.in_analysis?
                    label.field-label.fontsize-smallest.fontcolor-secondary.fontweight-bold = t('.video_url_hint')
                .w-col.w-col-6
                  = form.input :video_url, as: :string,
                    label: '',
                    hint: false,
                    input_html: { class: 'positive medium', required: false },
                    validation_text: false
  .w-section.section
    .w-container
      .w-row
        .w-col.w-col-4.w-col-push-4
          = hidden_field_tag 'anchor', 'video'
          = form.hidden_field :project_id, value: @project.id
          = form.button :submit, t('.submit'),  class:'btn btn-large', id: 'project-save'
