section.slider
  .banner
    ul.banner-container
      li
        .parallax-container
          .parallax
            /img alt=("Altos de Añelo") src="https://www.crowdium.com.ar/img/proyectos/anelo/main_slider/slider10.jpg"
            = image_tag 'catarse_bootstrap/home/slider1.jpg', alt: 'HomeParte_1'
        em
        .set_table
          .alignment
